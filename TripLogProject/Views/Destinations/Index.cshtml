@model IEnumerable<TripLog.Models.Destination>

<h2>Destinations</h2>

<p>
    <a class="btn btn-primary" asp-action="Add">Add Destination</a>
</p>

@if (!Model.Any())
{
    <p>No destinations yet.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.Name</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@d.DestinationId" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
