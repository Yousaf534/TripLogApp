@model IEnumerable<TripLog.Models.Accommodation>

<h2>Accommodations</h2>

<p>
    <a class="btn btn-primary" asp-action="Add">Add Accommodation</a>
</p>

@if (!Model.Any())
{
    <p>No accommodations yet.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Name</td>
                <td>@a.Phone</td>
                <td>@a.Email</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@a.AccommodationId" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
