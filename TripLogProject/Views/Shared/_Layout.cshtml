<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>My Trip Log</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <header class="bg-dark text-white p-3 mb-3">
        <div class="container">
            <h1 class="mb-0">My Trip Log</h1>
            @if (!string.IsNullOrEmpty(ViewBag.SubHeader as string))
            {
                <h4 class="mt-2">@ViewBag.SubHeader</h4>
            }
        </div>
    </header>

    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-3">
        <div class="container">
            <a class="navbar-brand" asp-controller="Trips" asp-action="Index">Home</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Trips" asp-action="Index">View Trips</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Destinations" asp-action="Index">Manage Destinations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Accommodations" asp-action="Index">Manage Accommodations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Activities" asp-action="Index">Manage Activities</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mb-5">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">
                @TempData["Message"]
            </div>
        }
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
